.wxc-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 4px;
  padding: 0 30rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 1;
  text-align: center;
  overflow: hidden;
  color: #FFFFFF;
  background-color: #667eea;
  margin-left: 0;
  margin-right: 0;
}

.wxc-btn.primary {
  background-color: #667eea;
}

.wxc-btn.default {
  background-color: #f8f8f8;
  color: #333333;
}

.wxc-btn.warn {
  background-color: #ff9900;
}

.wxc-btn.danger {
  background-color: #e64340;
}

.wxc-btn.plain {
  background-color: transparent;
  border: 1px solid currentColor;
}

.wxc-btn.plain.primary {
  color: #667eea;
}

.wxc-btn.plain.default {
  color: #333333;
}

.wxc-btn.plain.warn {
  color: #ff9900;
}

.wxc-btn.plain.danger {
  color: #e64340;
}

.wxc-btn.large {
  width: 100%;
  height: 88rpx;
  font-size: 34rpx;
}

.wxc-btn.medium {
  height: 76rpx;
  font-size: 32rpx;
}

.wxc-btn.small {
  height: 64rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.wxc-btn.mini {
  height: 56rpx;
  font-size: 24rpx;
  padding: 0 14rpx;
}

.wxc-btn.disabled {
  opacity: 0.6;
}

.button-hover {
  opacity: 0.9;
}