/* pages/order/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 订单状态 */
.status-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.status-icon.pending {
  background-color: #fff3e0;
}

.status-icon.in_progress {
  background-color: #e3f2fd;
}

.status-icon.pending_payment {
  background-color: #fce4ec;
}

.status-icon.completed {
  background-color: #e8f5e8;
}

.status-text {
  flex: 1;
}

.status-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
}

/* 通用section */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.value.amount {
  color: #f44336;
  font-weight: 600;
  font-size: 32rpx;
}

/* 问题描述 */
.description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* 图片相关 */
.images, .work-images-display {
  margin-top: 20rpx;
}

.image-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 地址信息 */
.address-info {
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.contact-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-right: 30rpx;
}

.contact-phone {
  font-size: 28rpx;
  color: #1976d2;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 电工信息 */
.electrician-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.electrician-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.electrician-avatar image {
  width: 100%;
  height: 100%;
}

.electrician-details {
  flex: 1;
}

.electrician-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.electrician-phone {
  font-size: 26rpx;
  color: #1976d2;
  margin-bottom: 10rpx;
}

.electrician-rating {
  font-size: 24rpx;
  color: #666;
}

/* 维修内容表单 */
.work-form {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.work-content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fafafa;
}

.work-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.work-image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.work-image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.add-work-image-btn {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  font-size: 40rpx;
  color: #999;
}

.amount-input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  margin-right: 10rpx;
}

.amount-unit {
  font-size: 28rpx;
  color: #666;
}

/* 维修内容显示 */
.work-content {
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.work-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.no-work-content {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 15rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #e0e0e0;
}

.timeline-item {
  position: relative;
  margin-bottom: 30rpx;
}

.timeline-dot {
  position: absolute;
  left: -25rpx;
  top: 5rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #1976d2;
  border-radius: 50%;
}

.timeline-content {
  padding-left: 20rpx;
}

.timeline-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #fafafa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.accept-btn {
  background-color: #1976d2;
  color: #fff;
}

.complete-btn {
  background-color: #4caf50;
  color: #fff;
}

.complete-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.contact-btn {
  background-color: #ff9800;
  color: #fff;
}

.confirm-btn {
  background-color: #2196f3;
  color: #fff;
}

.pay-btn {
  background-color: #f44336;
  color: #fff;
}

.review-btn {
  background-color: #9c27b0;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #999;
}