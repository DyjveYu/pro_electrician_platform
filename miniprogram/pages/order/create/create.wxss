.page-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.form-section {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.service-list {
  display: flex;
  flex-wrap: wrap;
}

.service-item {
  padding: 16rpx 26rpx;
  margin: 10rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}

.service-item.active {
  background-color: #0F9D58;
  color: #fff;
  border-color: #0F9D58;
}

.desc-textarea {
  width: calc(100% - 20rpx); /* 宽度减少，留出空隙 */
  min-height: 120rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 28rpx;
  color: #333;
  
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.uploaded-image {
  width: 120rpx;
  height: 120rpx;
  margin: 10rpx;
  border-radius: 8rpx;
}

.add-image {
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  text-align: center;
  line-height: 160rpx;
  font-size: 60rpx;
  color: #999;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #f2f2f2;
  white-space: nowrap; /* 关键：禁止换行 */
}

.label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
}

.value {
  flex: 1;
  text-align: right;
  color: #333;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
}

.submit-section {
  margin-top: 40rpx;
}

/* 原提交按钮不再使用，保留基础样式 */
.submit-btn {
  width: 100%;
  background: linear-gradient(90deg, #0F9D58 0%, #81C784 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
}

/* 底部提交预约条 */
.submit-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  box-shadow: 0 -6rpx 24rpx rgba(0,0,0,0.06);
}
.prepay-text {
  color: #0F9D58;
  font-weight: 600;
  font-size: 30rpx;
}
.booking-btn {
  min-width: 260rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(90deg, #0F9D58 0%, #81C784 100%);
  color: #fff;
  border-radius: 80rpx;
  font-size: 28rpx;
  border: none;
  margin-left: auto; /* 关键：自动左外边距推向右侧 */
  display: block; /* 确保块级显示 */
  margin-right: 32rpx; /* 可选：右侧留出空隙 */
}
.booking-btn[disabled] {
  opacity: 0.6;
}

/* 底部弹层通用样式 */
.sheet-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.35);
  z-index: 998;
}
.action-sheet {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  z-index: 999;
  max-height: 70vh;
}
.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.close-icon {
  font-size: 40rpx;
  line-height: 40rpx;
}
.sheet-body {
  height: 48vh;
}
.address-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1px solid #f2f2f2;
}
.addr-title {
  font-size: 28rpx;
  color: #333;
}
.addr-detail {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666;
}
.mini-btn {
  padding: 10rpx 24rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 40rpx;
  font-size: 26rpx;
}
.empty-tip {
  text-align: center;
  color: #999;
  padding: 24rpx 0;
}
.sheet-footer {
  display: flex;
  gap: 20rpx;
  padding: 16rpx 24rpx 24rpx 24rpx;
}
.footer-btn {
  flex: 1;
  padding: 18rpx 0;
  border-radius: 60rpx;
  font-size: 28rpx;
  border: none;
}
.footer-btn.primary { background: #0F9D58; color: #fff; }
.footer-btn.secondary { background: #e9f5ee; color: #0F9D58; }

/* 时间选择布局 */
.time-sheet-body {
  display: flex;
  border-top: 1px solid #f2f2f2;
}
.date-column {
  width: 50%;
  height: 40vh;
  border-right: 1px solid #f2f2f2;
}
.slot-column {
  width: 50%;
  height: 40vh;
}
.date-item, .slot-item {
  padding: 22rpx 24rpx;
  font-size: 28rpx;
}
.date-item.selected, .slot-item.selected {
  background: #e9f5ee;
  color: #0F9D58;
}
