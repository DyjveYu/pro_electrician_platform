/* pages/order/list/list.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-status-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.detail-link {
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
}

/* 订单信息列表 */
.order-info-list {
  margin-bottom: 0;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  min-width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.info-value.description {
  color: #666;
  line-height: 1.5;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  border: none;
  min-width: 120rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #000;
  border: 2rpx solid #e0e0e0;
}

.accept-btn {
  background: linear-gradient(90deg, #0F9D58 0%, #81C784 100%);
  color: #000;
}

.complete-btn {
  background: linear-gradient(90deg, #2E7D32 0%, #81C784 100%);
  color: #000;
}

.contact-btn {
  background-color: #ffcc80;
  color: #000;
}

.pay-btn {
  background-color: #ef9a9a;
  color: #000;
}

.review-btn {
  background-color: #b39ddb;
  color: #000;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #ccc;
}