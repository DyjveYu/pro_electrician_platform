/* pages/order/list/list.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Tab导航 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1976d2;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1976d2;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-info {
  flex: 1;
}

.order-number {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.order-status.pending {
  background-color: #fff3e0;
  color: #f57c00;
}

.order-status.in_progress {
  background-color: #e3f2fd;
  color: #1976d2;
}

.order-status.pending_payment {
  background-color: #fce4ec;
  color: #c2185b;
}

.order-status.completed {
  background-color: #e8f5e8;
  color: #388e3c;
}

/* 订单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.service-info {
  margin-bottom: 15rpx;
}

.service-type {
  display: inline-block;
  background-color: #e3f2fd;
  color: #1976d2;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.service-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-top: 10rpx;
}

.order-amount {
  text-align: right;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  color: #f44336;
  font-weight: 600;
}

/* 地址信息 */
.address-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.address-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  margin-top: 2rpx;
}

.address-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 联系信息 */
.contact-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.contact-name {
  margin-right: 20rpx;
}

.contact-phone {
  color: #1976d2;
}

/* 电工信息 */
.electrician-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.electrician-label {
  margin-right: 10rpx;
}

.electrician-name {
  margin-right: 20rpx;
  color: #333;
}

.electrician-phone {
  color: #1976d2;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: none;
  min-width: 120rpx;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #fafafa;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.accept-btn {
  background-color: #1976d2;
  color: #fff;
}

.complete-btn {
  background-color: #4caf50;
  color: #fff;
}

.contact-btn {
  background-color: #ff9800;
  color: #fff;
}

.pay-btn {
  background-color: #f44336;
  color: #fff;
}

.review-btn {
  background-color: #9c27b0;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #ccc;
}