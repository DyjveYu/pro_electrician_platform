/* pages/electrician/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 电工卡片 */
.electrician-card {
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.3);
}

.electrician-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-section {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.electrician-info {
  flex: 1;
}

.electrician-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.electrician-phone {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.electrician-rating {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.rating-text {
  font-size: 24rpx;
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 30rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 通用section */
.section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 技能列表 */
.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.skill-tag {
  background-color: #e3f2fd;
  color: #1976d2;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

/* 服务介绍 */
.description-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 认证信息 */
.cert-info {
  /* 认证信息样式 */
}

.cert-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.cert-item:last-child {
  margin-bottom: 0;
}

.cert-label {
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.cert-value {
  color: #333;
  flex: 1;
}

/* 联系按钮 */
.contact-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.contact-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1976d2;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 8rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-btn::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}