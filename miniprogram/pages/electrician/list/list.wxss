/* pages/electrician/list/list.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 电工列表 */
.electrician-list {
  padding: 20rpx;
}

.electrician-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s;
}

.electrician-item:active {
  background-color: #f5f5f5;
}

.electrician-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.electrician-avatar image {
  width: 100%;
  height: 100%;
}

.electrician-info {
  flex: 1;
}

.electrician-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.electrician-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.electrician-rating {
  background-color: #fff3e0;
  color: #f57c00;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.rating-text {
  font-weight: 600;
}

.electrician-details {
  display: flex;
  margin-bottom: 15rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 30rpx;
}

.electrician-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.skill-tag {
  background-color: #e3f2fd;
  color: #1976d2;
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.electrician-location {
  font-size: 24rpx;
  color: #999;
}

.location-text {
  display: flex;
  align-items: center;
}

/* 操作按钮 */
.electrician-actions {
  margin-left: 20rpx;
}

.action-btn {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  min-width: 80rpx;
}

.action-btn::after {
  border: none;
}

.contact-btn {
  background-color: #1976d2;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #ccc;
}