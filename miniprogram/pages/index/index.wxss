/* pages/index/index.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部位置栏 */
.location-bar {
  background: linear-gradient(135deg, #0F9D58 0%, #81C784 100%);
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.location-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 32rpx;
  font-weight: 500;
  text-align: left;
}

.location-arrow {
  font-size: 28rpx;
  opacity: 0.8;
  margin-left: 20rpx;
}

/* 用户角色界面 */
.user-content {
  padding: 0 30rpx;
}

/* 主要服务卡片 */
.service-card {
  background: linear-gradient(135deg, #0F9D58 0%, #81C784 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(15, 157, 88, 0.28);
  margin: 20rpx 0 40rpx;
  display: flex;
  align-items: center;
}

.service-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.service-info {
  flex: 1;
}

.service-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.service-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.service-arrow {
  font-size: 32rpx;
  color: white;
  opacity: 0.8;
}

/* 电工角色界面 */
.electrician-content {
  padding: 0 30rpx;
}

/* 电工工作台 */
.electrician-dashboard {
  display: flex;
  gap: 20rpx;
  margin: -20rpx 0 40rpx;
}

.dashboard-item {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.dashboard-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.dashboard-title {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

/* 通用区域样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.section-subtitle {
  font-size: 26rpx;
  color: #6b7280;
}

.section-more {
  color: #6366f1;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #6b7280;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #9ca3af;
  margin-bottom: 15rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #d1d5db;
  display: block;
}

/* 用户订单列表 */
.order-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.order-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.order-item:last-child {
  border-bottom: none;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-completed {
  background: #dcfce7;
  color: #16a34a;
}

.status-pending {
  background: #fef3c7;
  color: #d97706;
}

.status-in_progress {
  background: #dbeafe;
  color: #2563eb;
}

.order-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-electrician {
  font-size: 26rpx;
  color: #6b7280;
}

.order-time {
  font-size: 26rpx;
  color: #6b7280;
}

.order-rating {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.rating-text {
  font-size: 26rpx;
  color: #6b7280;
}

.price-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #6366f1;
}

/* 电工附近订单列表 */
.nearby-order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.nearby-order-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.order-card {
  padding: 30rpx;
}

.order-details {
  margin: 20rpx 0;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #6b7280;
  width: 160rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #374151;
  flex: 1;
}

.detail-value.price {
  color: #f59e0b;
  font-weight: 600;
}

.order-description {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.description-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

.order-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.detail-btn {
  flex: 1;
  background: #f3f4f6;
  color: #374151;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 500;
}

.take-order-btn {
  flex: 1;
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
}

