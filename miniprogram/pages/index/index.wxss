/* pages/index/index.wxss */

.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部位置栏 */
.search-bar {
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-btn {
  display: flex;
  align-items: center;
  color: white;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
}

.search-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 主要服务卡片 */
.quick-order {
  margin: -40rpx 30rpx 40rpx;
  position: relative;
  z-index: 10;
}

.order-card {
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.3);
  margin-top: 50rpx;
}

.order-content {
  margin-bottom: 40rpx;
}

.order-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 15rpx;
}

.order-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

.order-btn {
  background: white;
  border-radius: 50rpx;
  padding: 25rpx 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.order-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #6366f1;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 最近订单区域 */
.my-orders {
  margin: 0 30rpx 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.more-btn {
  display: flex;
  align-items: center;
  color: #6366f1;
  font-size: 28rpx;
}

.more-btn text {
  margin-right: 8rpx;
}

/* 订单列表 */
.order-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.order-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.order-item:last-child {
  border-bottom: none;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  flex: 1;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-completed {
  background: #dcfce7;
  color: #16a34a;
}

.status-pending {
  background: #fef3c7;
  color: #d97706;
}

.status-in_progress {
  background: #dbeafe;
  color: #2563eb;
}

.order-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 15rpx;
}

.order-time {
  font-size: 26rpx;
  color: #6b7280;
  display: flex;
  align-items: center;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #6366f1;
}

/* 服务师傅信息 */
.order-electrician {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 10rpx;
}

/* 评分显示 */
.order-rating {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
}

.rating-star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 角色切换 */
.role-switch {
  display: flex;
  margin: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.role-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.role-item.active {
  background: #6366f1;
  color: white;
}

.role-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

/* 服务类型 */
.service-types {
  margin: 0 30rpx 40rpx;
}

.service-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.service-item {
  flex: 1;
  min-width: 160rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.service-name {
  font-size: 26rpx;
  color: #374151;
  text-align: center;
}

/* 平台统计 */
.platform-stats {
  margin: 0 30rpx 40rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.stats-item {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #6366f1;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* 登录提示 */
.login-prompt {
  margin: 0 30rpx 40rpx;
}

.prompt-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.prompt-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.prompt-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 15rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 30rpx;
}

.login-btn {
  background: #6366f1;
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: inline-block;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #6366f1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.4);
  z-index: 100;
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #9ca3af;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 电工模式相关样式 */
.nearby-orders {
  margin: 0 30rpx 40rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  color: #6366f1;
  font-size: 28rpx;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.order-distance {
  font-size: 24rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.order-desc {
  font-size: 28rpx;
  color: #ffffff;
  margin: 15rpx 0;
  line-height: 1.5;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.order-budget {
  font-size: 26rpx;
  color: #6b7280;
  margin-left: 20rpx;
}

.take-order-btn {
  background: #6366f1;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 认证状态 */
.certification-status {
  margin: 0 30rpx 40rpx;
}

.cert-card {
  background: #fef3c7;
  border: 1rpx solid #fbbf24;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.cert-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.cert-content {
  flex: 1;
}

.cert-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #92400e;
  margin-bottom: 8rpx;
}

.cert-desc {
  font-size: 26rpx;
  color: #92400e;
}

.cert-btn {
  background: #f59e0b;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.filter-content {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  width: 100%;
  max-height: 80vh;
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
}

.close-icon {
  width: 48rpx;
  height: 48rpx;
}