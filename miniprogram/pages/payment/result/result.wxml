<!--pages/payment/result/result.wxml-->
<view class="container">
  <!-- 支付结果 -->
  <view class="result-section">
    <view class="result-icon {{status}}">
      <text wx:if="{{status === 'success'}}">✓</text>
      <text wx:else>✗</text>
    </view>
    <view class="result-title">
      {{status === 'success' ? '支付成功' : '支付失败'}}
    </view>
    <view class="result-desc">
      {{status === 'success' ? '您的订单已支付成功，电工将尽快为您服务' : '支付过程中出现问题，请重试'}}
    </view>
  </view>

  <!-- 订单信息 -->
  <view class="order-section" wx:if="{{order}}">
    <view class="order-item">
      <text class="label">订单号：</text>
      <text class="value">{{order.orderNumber}}</text>
    </view>
    <view class="order-item">
      <text class="label">支付金额：</text>
      <text class="value amount">¥{{order.amount}}</text>
    </view>
    <view class="order-item">
      <text class="label">服务类型：</text>
      <text class="value">{{order.serviceTypeName}}</text>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-section">
    <button class="action-btn primary" bindtap="viewOrderDetail">
      查看订单详情
    </button>
    <button class="action-btn secondary" bindtap="goHome">
      返回首页
    </button>
  </view>
</view>