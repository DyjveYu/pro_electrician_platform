/* pages/payment/payment/payment.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 订单信息 */
.order-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.order-info {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.order-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.order-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 160rpx;
}

.value {
  color: #333;
  flex: 1;
}

/* 支付金额 */
.amount-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
  text-align: center;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.amount-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #f44336;
}

/* 支付方式 */
.payment-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.payment-methods {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
  transition: background-color 0.3s;
}

.payment-method:last-child {
  border-bottom: none;
}

.payment-method.selected {
  background-color: #f0f8ff;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.method-radio {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio {
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  transition: all 0.3s;
}

.radio.checked {
  border-color: #1976d2;
  background-color: #1976d2;
  position: relative;
}

.radio.checked::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #fff;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 支付按钮 */
.pay-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.pay-btn {
  width: 100%;
  height: 88rpx;
  background-color: #f44336;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 8rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pay-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.pay-btn::after {
  border: none;
}