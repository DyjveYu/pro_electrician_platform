/* pages/profile/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.role-badge {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  background-color: #4caf50;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  border: 2rpx solid #fff;
}

.role-badge.electrician {
  background-color: #ff9800;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

.certification-status {
  display: inline-block;
}

.status-text {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.status-text.certified {
  background-color: rgba(76, 175, 80, 0.8);
}

.status-text.uncertified {
  background-color: rgba(255, 152, 0, 0.8);
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 30rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 电工信息卡片 */
.electrician-card {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.electrician-info {
  /* 电工信息样式 */
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.info-row .value {
  color: #333;
  flex: 1;
}

/* 菜单区域 */
.menu-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
  transition: background-color 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.certification-badge {
  margin-right: 15rpx;
}

.badge-text {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.badge-text.certified {
  background-color: #e8f5e8;
  color: #4caf50;
}

.badge-text.uncertified {
  background-color: #fff3e0;
  color: #ff9800;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 20rpx 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #f44336;
  font-size: 28rpx;
  border: 2rpx solid #f44336;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background-color: #f44336;
  color: #fff;
}