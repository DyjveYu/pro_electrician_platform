/* pages/profile/switch-role/switch-role.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 当前角色 */
.current-role {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.current-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1976d2;
}

/* 角色选择区域 */
.roles-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 角色卡片 */
.role-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.role-card.active {
  border-color: #1976d2;
  box-shadow: 0 4rpx 16rpx rgba(25, 118, 210, 0.2);
}

.role-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.role-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  margin-right: 20rpx;
}

.role-info {
  flex: 1;
}

.role-title {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.role-title .role-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 15rpx;
}

.current-badge {
  background-color: #1976d2;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.role-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 功能特性 */
.role-features {
  margin-bottom: 20rpx;
}

.feature-item {
  margin-bottom: 8rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #888;
  line-height: 1.5;
}

/* 认证要求 */
.certification-requirement {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.requirement-text {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #666;
}

.requirement-icon {
  margin-right: 8rpx;
}

.certification-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.status-icon {
  margin-right: 6rpx;
}

.status.certified {
  color: #4caf50;
}

.status.uncertified {
  color: #ff9800;
}

.go-certification {
  color: #1976d2;
  font-size: 24rpx;
  margin-left: 20rpx;
}

/* 角色操作 */
.role-action {
  text-align: center;
}

.current-role-btn {
  background-color: #e0e0e0;
  color: #999;
  padding: 16rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  display: inline-block;
}

.switch-btn {
  background-color: #1976d2;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  display: inline-block;
  transition: background-color 0.3s;
}

.switch-btn:active {
  background-color: #1565c0;
}

/* 提示区域 */
.tips-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.tips-content {
  /* 提示内容样式 */
}

.tip-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.tip-item:last-child {
  margin-bottom:0;
}