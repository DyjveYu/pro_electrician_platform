<!--pages/service-types/service-types.wxml-->
<view class="container">
  <!-- 服务类型列表 -->
  <view class="service-list">
    <view 
      class="service-item"
      wx:for="{{serviceTypes}}"
      wx:key="id"
      data-service="{{item}}"
      bindtap="selectServiceType"
    >
      <view class="service-header">
        <view class="service-icon">{{item.icon}}</view>
        <view class="service-info">
          <view class="service-name">{{item.name}}</view>
          <view class="service-price">{{item.price}}</view>
        </view>
        <text class="arrow">></text>
      </view>
      
      <view class="service-desc">{{item.desc}}</view>
      
      <view class="service-features">
        <text 
          class="feature-tag"
          wx:for="{{item.features}}"
          wx:key="*this"
          wx:for-item="feature"
        >
          {{feature}}
        </text>
      </view>
    </view>
  </view>

  <!-- 说明文字 -->
  <view class="tips-section">
    <view class="tips-title">服务说明</view>
    <view class="tips-content">
      <text class="tip-item">• 价格仅供参考，具体费用以电工报价为准</text>
      <text class="tip-item">• 服务时间：周一至周日 8:00-22:00</text>
      <text class="tip-item">• 紧急情况可联系24小时客服</text>
      <text class="tip-item">• 所有电工均经过专业认证</text>
    </view>
  </view>
</view>