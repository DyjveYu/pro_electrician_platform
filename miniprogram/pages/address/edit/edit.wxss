/* pages/address/edit/edit.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 表单区域 */
.form-section {
  padding: 20rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  min-height: 100rpx;
}

/* 地区选择 */
.region-selector {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 开关项 */
.switch-item {
  justify-content: space-between;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1976d2;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 8rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.save-btn::after {
  border: none;
}